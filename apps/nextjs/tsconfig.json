{
  "extends": "@urban/config-typescript/nextjs.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "#*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./src/**/*",
    ".next/types/**/*.ts",
    "eslint.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
