{
  "name": "@urban/personal-website-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "catalog": {
      "@effect/platform": "^0.77.4",
      "@effect/platform-node": "^0.73.4",
      "effect": "^3.13.4",
      "typescript": "5.9.2"
    },
    "packages": [
      "scratchpad",
      "scripts",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset add",
    "dev": "turbo run dev",
    "fmt": "oxfmt --check",
    "fmt:fix": "oxfmt",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "release": "echo \"No release script\" && exit 0",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version": "changeset version && bun install",
    "prepare": "husky"
  },
  "dependencies": {
    "@effect/platform": "0.94.1",
    "@effect/platform-node": "0.104.0",
    "@mdx-js/mdx": "3.1.1",
    "@mdx-js/react": "3.1.1",
    "@phosphor-icons/react": "2.1.10",
    "@types/mdx": "2.0.13",
    "@types/node": "25.0.9",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "clsx": "2.1.1",
    "effect": "3.19.14",
    "gray-matter": "4.0.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tinyglobby": "0.2.15"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "turbo": "2.7.5",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxfmt",
      "oxlint --fix"
    ],
    "*.{json,md,mdx,yml,yaml}": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">= 24.12.0"
  },
  "packageManager": "bun@1.3.5"
}
