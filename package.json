{
  "name": "@urban/personal-website-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "catalog": {
      "@effect/platform": "^0.77.4",
      "@effect/platform-node": "^0.73.4",
      "effect": "^3.13.4",
      "typescript": "5.9.2"
    },
    "packages": [
      "scratchpad",
      "scripts",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset add",
    "clean": "bun --filter=scripts run clean",
    "dev": "turbo run dev",
    "fmt": "oxfmt --check",
    "fmt:fix": "oxfmt",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "prepare": "husky && effect-language-service patch",
    "release": "echo \"No release script\" && exit 0",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "version": "changeset version && bun install"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@effect/language-service": "0.57.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "turbo": "2.7.5",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxfmt",
      "oxlint --fix"
    ],
    "*.{css,html,json,jsonc,md,mdx,yml,yaml}": [
      "oxfmt"
    ]
  },
  "engines": {
    "node": ">= 24.12.0"
  },
  "packageManager": "bun@1.3.5"
}
